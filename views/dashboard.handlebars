{{!-- blog posts --}}
<div id="blogPosts">
  {{#each blogs}}
  <div class="card my-2">
    <div class="card-header navbar-dark bg-secondary rounded d-flex justify-content-between align-items-center row">
      <a class="position-relative col-9 my-auto p-3 text-decoration-none text-reset">
        <h4 class="col-5">{{title}}</h4>
        <p class="position-absolute top-100 start-0 translate-middle invisible">{{content}}</p>
      </a>
      <p class="col-3 my-auto">{{date_created}}</p>
    </div>
  </div>
  {{/each}}
</div>

{{!-- create posts --}}
<div class="position-relative pt-4">
  <div id="createPost" class="card my-3 invisible">
    <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center">
      <h4>Create New Post</h4>
      <button type="button" id="exitCreate" class="btn-close bg-light" aria-label="Close"></button>
    </div>
    <div class="card-body text-center bg-info bg-opacity-50 text-dark w-100 m-auto p-auto border border-dark border-top-0 border-4 rounded-bottom">
      <form id="createBlog">
        <div class="mb-3 mx-2 text-start text-dark">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" name="title">
        </div>
        <div class="mb-3 mx-2 text-start text-dark">
          <label for="content" class="form-label">Content</label>
          <textarea type="text" class="form-control" name="content"></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-25">Create</button>
      </form>
    </div>
  </div>

{{!-- edit posts --}}
  <div id="editPost" class="card my-3 w-100 position-absolute top-50 start-50 translate-middle invisible">
    <div class="card-header navbar-dark bg-dark d-flex justify-content-between align-items-center">
      <h4>Edit Post</h4>
      <button type="button" id="exitEdit" class="btn-close bg-light" aria-label="Close"></button>
    </div>
    <div class="card-body text-center bg-info bg-opacity-50 text-dark w-100 m-auto p-auto border border-dark border-top-0 border-4 rounded-bottom">
      <form id="editBlog">
        <div class="mb-3 mx-2 text-start text-dark">
          <label for="title" class="form-label">Title</label>
          <input id="title" type="text" class="form-control" name="title" value="">
        </div>
        <div class="mb-3 mx-2 text-start text-dark">
          <label for="content" class="form-label">Content</label>
          <textarea id="content" type="text" class="form-control" name="content"></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-75 mb-3">Update Post</button>
        <button type="submit" class="btn btn-primary w-75">Delete</button>
      </form>
    </div>
  </div>
</div>

{{!-- new post button --}}
<button id="newPost" type="button" class="fs-4 py-2 px-3 text-light bg-primary rounded fixed-bottom w-25 mx-auto mb-2">+ New Post</button>

<script src="/js/dashboard.js"></script>